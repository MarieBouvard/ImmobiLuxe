<h2>Acccounts</h2>

<%= paginate @accounts %>

<% @accounts.each do |account| %>
    <div class="row">
        <div class="col-sm-3">
            <%= account.full_name %>
        </div>
        <div class="col-sm-3">
            <%= account.email %>
        </div>
        <div class="col-sm-3">
            <%= account.created_at.strftime("%d %m %Y") %>
        </div>
        <div class="col-sm-3">
            <%= link_to "Profile", profile_path(account.id)  %>
        </div>
    </div>
<% end %>