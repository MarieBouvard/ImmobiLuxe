<div class="container border p-4 pb-4 ml-lg-4"> 
    <div class="row text-center ">
        <div class="col mb-2">
            <%=image_tag(@house.account.image, class: "img-circle img-responsive img-raised", style: 'width:100px; height:auto;') if @house.account.image.attached? %>
        </div>
        <h3 class="h4 m-0"><%= @agent.first_name %></h3>
        <p><%= @agent.company %></p>
        
    </div>
    <div class="row">
        <div class="col-12 mx-auto">
            <button class="btn btn-info text-light mb-4 w-100" id="show-tel" data-telephone="<%= @agent.telephone %>"><i class="fas fa-phone mr-5"></i><span>Call</span></button>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <%= link_to "Profile", profile_path(@agent.id), class: "btn btn-secondary w-100" %>
        </div>
        <div class="col-md-6">
            <button class="btn btn-success w-100" data-bs-toggle="modal" data-bs-target="#contact-modal">Email</button>
        </div>
    </div>
</div>

   