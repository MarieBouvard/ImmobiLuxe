<h1>Houses</h1>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
        <%= paginate @houses %>
        <table class="table ">
            <thead>
            <tr>
                <th>Name</th>
                <th id="address">Address</th>
                <th id="price">Price</th>
                <th id="rooms">Rooms</th>
                <th id="bathrooms">Bathrooms</th>
                <th colspan="3"></th>
            </tr>
            </thead>

            <tbody>
            <% @houses.each do |house| %>
                <tr>
                <td><%= house.name %></td>
                <td id="houseaddress"><%= house.address %></td>
                <td id="houseprice"><%= house.price %></td>
                <td id="houserooms"><%= house.rooms %></td>
                <td id="housebathrooms"><%= house.bathrooms %></td>
                <td><%= link_to 'Show', house %></td>
                <td><%= link_to 'Edit', edit_house_path(house) %></td>
                <td><%= link_to 'Destroy', house, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
            <% end %>
            </tbody>
        </table>

        <br>

        <%= link_to 'New House', new_house_path, class:"btn btn-success" %>
        </div>
    </div>
</div>
